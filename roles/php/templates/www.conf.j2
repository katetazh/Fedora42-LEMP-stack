[www]

user = "{{ fpm_user }}" 
group = "{{ fpm_group }}" 

listen = "{{ fpm_socket }}" 

;listen.backlog = 511


listen.owner = "{{ fpm_listen_user }}"
listen.group = "{{ fpm_listen_group }}"
listen.mode = "{{ fpm_listen_perms }}"

;listen.acl_users = "{{ fpm_listen_acl_user }}"
;listen.acl_groups = 

listen.allowed_clients = 127.0.0.1

; process.priority = -19

; process.dumpable = yes

pm = dynamic

pm.max_children = 50

pm.start_servers = 5

pm.min_spare_servers = 5

pm.max_spare_servers = 35

;pm.process_idle_timeout = 10s;

;pm.max_requests = 500

;pm.status_path = /status

;ping.path = /ping

;ping.response = pong

;access.log = log/$pool.access.log

slowlog = /var/opt/remi/php83/log/php-fpm/www-slow.log

;request_slowlog_timeout = 0

;request_slowlog_trace_depth = 20

;request_terminate_timeout = 0

;rlimit_files = 1024

;rlimit_core = 0

;chroot =

;chdir = /var/www

;catch_workers_output = yes

;clear_env = no

;security.limit_extensions = .php .php3 .php4 .php5 .php7

;env[HOSTNAME] = $HOSTNAME
;env[PATH] = /usr/local/bin:/usr/bin:/bin
;env[TMP] = /tmp
;env[TMPDIR] = /tmp
;env[TEMP] = /tmp

;php_admin_value[sendmail_path] = /usr/sbin/sendmail -t -i -f www@my.domain.com
;php_flag[display_errors] = off
php_admin_value[error_log] = /var/opt/remi/php83/log/php-fpm/www-error.log
php_admin_flag[log_errors] = on
;php_admin_value[memory_limit] = 128M

php_value[session.save_handler] = files
php_value[session.save_path]    = /var/opt/remi/php83/lib/php/session
php_value[soap.wsdl_cache_dir]  = /var/opt/remi/php83/lib/php/wsdlcache
;php_value[opcache.file_cache]  = /var/opt/remi/php83/lib/php/opcache
